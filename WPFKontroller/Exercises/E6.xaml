<Window x:Class="WPFKontroller.Exercises.E6"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFKontroller.Exercises"
        mc:Ignorable="d"
        Title="E6" Height="450" Width="800">
    <UniformGrid Columns="2" Rows="1">

        <StackPanel Margin="10">
            <Label Content="Students:"/>
            <ListBox x:Name="listBox" 
                     Height="360"
                     SelectionMode="Single"
                     SelectionChanged="listBox_SelectionChanged"
                    />
        </StackPanel>

        <StackPanel Margin="35">
            <Label Content="Firstname:"/>
            <TextBox x:Name="textBoxFirstname" 
                     Margin="0 0 0 30"
                     TextChanged="textBoxFirstname_TextChanged"/>
            <Label Content="Lastname:"/>
            <TextBox x:Name="textBoxLastname" 
                     Margin="0 0 0 30"
                     TextChanged="textBoxLastname_TextChanged"/>
            <Label Content="Email:"/>
            <TextBox x:Name="textBoxEmail"
                     TextChanged="textBoxEmail_TextChanged"/>
        </StackPanel>


    </UniformGrid>
</Window>
